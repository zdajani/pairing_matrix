<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="h-title">
        <h4>Sign up</h4>
        <span class="h-underline"></span>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field greybox">
          <%= f.text_field :first_name, autofocus: true, placeholder: "First name" %>
        </div>

        <div class="field greybox">
          <%= f.text_field :last_name, autofocus: true, placeholder: "Last name" %>
        </div>

        <div class="field greybox">
          <%= f.text_field :email, autofocus: true, placeholder: "Email" %>
        </div>

        <div class="field greybox">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        </div>

        <div class="field greybox">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>
        </div>
        <!-- <div class="center-block"> -->
          <div class="actions devise-btn-lrg reset">
              <%= f.submit "SIGN UP &#8594;".html_safe %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      <!-- </div> -->
    </div>
  </div>
</div>
